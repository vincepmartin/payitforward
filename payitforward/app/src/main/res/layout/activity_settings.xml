<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#BDD2C7"
    tools:context="net.finalatomicbuster.payitforward.SettingsActivity">

    <TextView android:textColor="#01160F"
        fontPath="fonts/comic-neue.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/billinginformationstring"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <EditText android:textColor="#01160F"
        fontPath="fonts/comic-neue.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <EditText android:textColor="#01160F"
        fontPath="fonts/comic-neue.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextCreditCardName"
        android:layout_alignTop="@+id/editText"
        android:layout_centerHorizontal="true"
        android:hint="Full Name" />

    <EditText android:textColor="#01160F"
        fontPath="fonts/comic-neue.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextCreditCardNumber"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editTextCreditCardName"
        android:hint="Credit Card #" />

    <EditText android:textColor="#01160F"
        fontPath="fonts/comic-neue.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextCreditCardExperationDate"
        android:layout_below="@+id/editTextCreditCardNumber"
        android:layout_centerHorizontal="true"
        android:hint="Expiration Date" />

    <EditText android:textColor="#01160F"
        fontPath="fonts/comic-neue.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextCreditCardSecurityNumber"
        android:hint="Security #"
        android:layout_below="@+id/editTextCreditCardExperationDate"
        android:layout_alignStart="@+id/editTextCreditCardExperationDate" />

    <Button android:textColor="#01160F"
        fontPath="fonts/comic-neue.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Settings"
        android:id="@+id/buttonSaveSettings"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp" />
</RelativeLayout>
